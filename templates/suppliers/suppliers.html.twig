{%  extends 'base.html.twig'%}

{% block title %} Symfony tech test {% endblock %}

{% block body %}

{% if app.user %}
    <h1 style="font-size: 19px; display:flex; Justify-content: center;" >Welcome! thanks for taking your time to create an account. <br>Feel free to explore and create new data(supplier) if you have none
    </h1>
{% else %}
    <h1 style="font-size: 19px; display:flex; Justify-content: center" >Welcome! to fully enjoy your user experience, you can create an account. <br>Also, Feel free to explore and create new data(supplier) if you have none
    {# <a class="pl-2" href="/create">here</a> #}
    </h1>
    <a class="d-flex justify-content-center text-weight-bold" style="text-weight: bold; font-size: 20px" href="/create">create</a>
{% endif %}

{% for supplier in suppliers %}
<div>
       <div class="container mt-5 col" style="max-width: fit-content">
            <div class="row">
                <div>
                    <div class="card p-3">
                        <div class="mb-3">
                            <div class="d-flex flex-column mb-1 font-weight-bold"><span><span style="color: #2a9fd6"> Name:</span> {{supplier.name}}</span>
                            <div class="d-flex flex-column mb-1"><span><span style="color: #2a9fd6"> Email:</span> {{supplier.email}}</span>
                            <div class="d-flex flex-column mb-1"><span><span style="color: #2a9fd6"> Phone:</span> {{supplier.phone}}</span>
                        </div>
                        <h6 class="mt-2"> Increasingly focused on improving our company's support one step at a time</h6>
                        <div class="d-flex justify-content-between align-items-center install mt-3 mb-3">
                            <span class="p-1" style="background-color:#fbe356; color: #62615e">{{supplier.type}}</span>
                            {% if supplier.status == true %}
                                <span style="color:#2ECC71">active <img style="width:15px; height:15px" src="https://img.icons8.com/fluency-systems-filled/48/40C057/ok--v1.png"/></span>
                            {% endif %}
                             {% if supplier.status == false %}
                                <span style="color: #adafae">inactive <img style="width:15px; height:15px" src="https://img.icons8.com/windows/32/000000/active-state.png"/></span>
                            {% endif %}
                        </div>
                        <div class=" buttons d-flex flex-row ml-0">
                            <button><a href="/delete/{{ supplier.id }}" >Delete</a></button>
                           {#  <button><a href="/create" >Create</a></button> #}
                            <button><a href="/edit/{{ supplier.id }}" >Edit</a></button>
                        </div>    
                    </div>
                </div>
            </div>
        </div>
{% endfor %}
{% for message in app.flashes('notice') %}
   <div class="alert alert-success">
   {{message}}
   </div>
{% endfor %}

{% endblock %}
{% block javascripts %}
  <script src="/js/supplier.js"></script>
{% endblock %}


